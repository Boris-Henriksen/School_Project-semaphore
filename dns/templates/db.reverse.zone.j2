$TTL {{ item.ttl }}
@   IN  SOA {{ item.ptr_records[0].hostname | regex_replace('\\..*$', '') }}. admin.{{ item.ptr_records[0].hostname | regex_replace('\\..*$', '') }}. (
    {{ item.serial }}
    3600
    1800
    604800
    86400
)

# NS Records (first PTR host)
{% if item.ptr_records | length > 0 %}
@   IN  NS {{ item.ptr_records[0].hostname | regex_replace('\\..*$', '') }}.
{% endif %}

# PTR Records
{% for r in item.ptr_records %}
{{ r.ip_last_octet }}   IN  PTR   {{ r.hostname }}
{% endfor %}
